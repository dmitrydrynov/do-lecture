{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/pages/*": [
        "pages/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/contexts/*": [
        "contexts/*"
      ],
      "@/helpers/*": [
        "helpers/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "custom.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "services/ton/manifest.mjs"
  ],
  "exclude": [
    "node_modules",
    "tsconfig.json"
  ]
}